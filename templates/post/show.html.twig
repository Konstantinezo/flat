{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <h1 class="fw-light">{{ post.title }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Body</th>
            <td>{{ post.body }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>DeletedAt</th>
            <td>{{ post.deletedAt ? post.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>



    <h2>Добавить комментарий</h2>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn btn-outline-primary" type="submit">{{ button_label|default('Сохранить') }}</button>
    {{ form_end(form) }}

    <h2>Комментарии</h2>

    <div>

        {% for comment in comments %}

            <div>
                <div>{{ comment.owner }}</div>
                <div>{{ comment.body }}</div>

            </div>

        {% endfor %}

    </div>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
